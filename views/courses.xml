<odoo>
    <record id="view_easy_exams_course_list" model="ir.ui.view">
        <field name="name">easy_exams.course.list</field>
        <field name="model">easy_exams.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_easy_exams_course_form" model="ir.ui.view">
        <field name="name">easy_exams.course.form</field>
        <field name="model">easy_exams.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="access_key" password="True"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
