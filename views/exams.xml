<odoo>
    <record id="view_easy_exams_exam_list" model="ir.ui.view">
        <field name="name">easy_exams.exam.list</field>
        <field name="model">easy_exams.exam</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_id"/>
                <field name="duration"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="view_easy_exams_exam_form" model="ir.ui.view">
        <field name="name">easy_exams.exam.form</field>
        <field name="model">easy_exams.exam</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="access_code" password="True"/>
                        <field name="description"/>
                        <field name="duration"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
