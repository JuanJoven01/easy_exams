<odoo>
    <menuitem id="menu_easy_exams_root" name="Easy Exams" sequence="1"/>

    <menuitem id="menu_easy_exams_courses" name="Courses" parent="menu_easy_exams_root"/>
    <menuitem id="menu_easy_exams_exams" name="Exams" parent="menu_easy_exams_root"/>
    <menuitem id="menu_easy_exams_questions" name="Questions" parent="menu_easy_exams_root"/>

    <record id="action_easy_exams_courses" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">easy_exams.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_easy_exams_exams" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">easy_exams.exam</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_easy_exams_questions" model="ir.actions.act_window">
        <field name="name">Questions</field>
        <field name="res_model">easy_exams.question</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_easy_exams_courses_action" parent="menu_easy_exams_courses" action="action_easy_exams_courses"/>
    <menuitem id="menu_easy_exams_exams_action" parent="menu_easy_exams_exams" action="action_easy_exams_exams"/>
    <menuitem id="menu_easy_exams_questions_action" parent="menu_easy_exams_questions" action="action_easy_exams_questions"/>
</odoo>
