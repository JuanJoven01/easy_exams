<odoo>
<record id="view_easy_exams_question_form" model="ir.ui.view">
        <field name="name">easy_exams.question.form</field>
        <field name="model">easy_exams.question</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="content"/>
                        <field name="question_type"/>
                        <field name="exam_id"/>
                        <field name="image" widget="image"/>
                    </group>
                    <notebook>
                        <page string="Options" attrs="{'invisible': [('question_type', '!=', 'multiple_choice')]}" >
                            <field name="option_ids">
                                <tree editable="bottom">
                                    <field name="content"/>
                                    <field name="is_correct"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pairs" attrs="{'invisible': [('question_type', '!=', 'matching')]}" >
                            <field name="pair_ids">
                                <tree editable="bottom">
                                    <field name="term"/>
                                    <field name="match"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>